{
    "$schema": "http://json.schemastore.org/template",
    "author": "Thiago Fialho",
    "classifications": ["Herald", "Worker"],
    "identity": "Herald.Template.Worker",
    "name": "Herald Template Worker",
    "shortName": "herald-worker",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourcename": "WorkerService",
    "preferNameDirectory": true,
    "placeholderFilename": ".keep",
    "symbols": {
        "no-database": {
            "description": "Put database sample into generated project.",
            "type": "parameter",
            "dataType": "bool",
            "defaultValue": "false"
        },
        "no-queue": {
            "description": "Put queue sample into generated project.",
            "type": "parameter",
            "dataType": "bool",
            "defaultValue": "false"
        },
        "no-externalapi": {
            "description": "Put external api sample into generated project.",
            "type": "parameter",
            "dataType": "bool",
            "defaultValue": "false"
        },
        "nodatabase": {
            "type": "computed",
            "value": "(no-database)"
        },
        "noqueue": {
            "type": "computed",
            "value": "(no-queue)"
        },
        "noexternalapi": {
            "type": "computed",
            "value": "(no-externalapi)"
        }
    },
    "primaryOutputs": [{
            "path": "WorkerService.Worker.sln"
        }
    ],
    "sources": [{
            "modifiers": [{
                    "rename": {
                        "dockerignore": ".dockerignore",
                        "gitignore": ".gitignore"
                    }
                }, {
                    "condition": "(nodatabase)",
                    "exclude": [
                        "**/GetFromDataBase/**/*",
                        "**/Migrations/**/*",
                        "**/Persistance/**/*",
                        "**/Repositories/**/*",
                        "**/Entities/*.cs",
                        "**/ProcessGetFromDataBaseService.cs"
                    ]
                }, {
                    "condition": "(noqueue)",
                    "exclude": [
                        "**/SendToQueue/**/*",
                        "**/ProcessSendToQueueService.cs"
                    ]
                }, {
                    "condition": "(noexternalapi)",
                    "exclude": [
                        "**/GetFromExternalApi/**/*",
                        "**/WebServices/**/*",
                        "**/ProcessGetFromExternalApiService.cs"
                    ]
                }
            ]
        }
    ],
    "SpecialCustomOperations": {
        "**/*.yml": {
            "operations": [{
                    "type": "conditional",
                    "configuration": {
                        "if": ["#if"],
                        "else": ["#else"],
                        "elseif": ["#elseif"],
                        "endif": ["#endif"],
                        "actionableIf": ["##if"],
                        "actionableElse": ["##else"],
                        "actionableElseif": ["##elseif"],
                        "actions": ["uncomment", "reduceComment"],
                        "trim": "true",
                        "wholeLine": "true",
                        "evaluator": "C++"
                    }
                }
            ]
        }
    }
}
